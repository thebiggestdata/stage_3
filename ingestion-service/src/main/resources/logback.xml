<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.thebiggestdata.ingestion.infrastructure.adapter.api" level="DEBUG"/>
    <logger name="com.thebiggestdata.ingestion.infrastructure.adapter.activemq" level="DEBUG"/>
</configuration>